{
  "name": "webhooks-back-end",
  "version": "1.0.0",
  "description": "Back-end da API de webhooks para recebimento, armazenamento e inspeção de eventos HTTP",
  "main": "dist/server.js",
  "keywords": [
    "webhook",
    "webhooks",
    "api",
    "backend",
    "nodejs",
    "fastify",
    "http",
    "rest",
    "events",
    "debug"
  ],
  "scripts": {
    "dev": "tsx watch --env-file=.env src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config=drizzle.config.ts"
  },
  "author": "Matheus Pereira da Silva",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/swagger": "^9.7.0",
    "@scalar/fastify-api-reference": "^1.44.20",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "fastify": "^5.7.4",
    "fastify-type-provider-zod": "^6.1.0",
    "pg": "^8.18.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^20.19.33",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.9",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
